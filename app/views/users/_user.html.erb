      <div class="follow-btn text-right">
        <%= render 'relationships/follow_button', user: user %>
      </div>
  
      <div class="media">
        <div class="media-body">
  
          <%= form_with(model: user, local: true) do |f| %>
            <div class="profile-header d-flex">
              <div class="profile-image">
                <figure>
                  <% if user.image? %>
                    <%= image_tag user.image.url, class:"rounded-circle icon_image mr-2 mb-2" %>
                  <% else %>
                    <%= image_tag "noimage_120.png", class:"rounded-circle icon_image mr-2 mb-2" %>
                  <% end %>   
                  <figcaption><strong><%= user.name %></strong></figcaption>
                </figure>
              </div>
              <% if current_user == user %>
                <div class="edit-profile">
                  <span class="edit-btn"><%= link_to "プロフィール編集", edit_user_path(user), class: 'btn btn-sm btn-primary' %></span>
                </div>
              <% end %>
            </div>
    
            <div class="form-group">
              <%= f.text_area :biography, class: 'form-control', rows: 7, readonly: true%>
            </div>
          <% end %>
  
        </div>
      </div>
  
      <%= render 'tabs', user: user %>